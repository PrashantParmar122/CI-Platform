@using CiPlatform.Models
@model TimeSheetVM


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CL-Policy</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
    <link href="~/css/TimeSheet.css" rel="stylesheet">
    <link href="~/css/Navigation.css" rel="stylesheet">
</head>

<body>
    <div class="body-1">
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        @await Component.InvokeAsync("Navigation")
        <hr>
        <div class="body-2">
            <form method="post" class="row g-3 common-font font-style-1">
                <input asp-for="Timesheetid" hidden />
                <div class="col-12">
                    <label asp-for="Missionid" class="form-label">Select Mission</label>
                    <select asp-for="Missionid" asp-items="@Model.MissionList" class="form-select input-box-style" style="box-shadow: none;">
                    </select>
                    <span asp-validation-for="Missionid" class="text-danger"></span>
                </div>
                <div class="col-12">
                    <label asp-for="date" class="form-label">Date</label>
                    <input asp-for="date" type="date" class="form-control input-box-style" style="box-shadow: none;">
                    <span asp-validation-for="date" class="text-danger"></span>
                </div>
                <div class="col-12">
                    <label asp-for="Notes" class="form-label">Notes</label>
                    <input asp-for="Notes" type="text" class="form-control input-box-style" style="box-shadow: none;"
                           placeholder="Enter Notes">
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>

                @if(Model.Missiontype == 1){
                    <div class="col-6">
                        <label asp-for="hour" class="form-label">Hour</label>
                        <input asp-for="hour" type="number" class="form-control input-box-style" style="box-shadow: none;">
                        <span asp-validation-for="hour" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <label asp-for="min" class="form-label">Minutes</label>
                        <input asp-for="min" type="number" class="form-control input-box-style" style="box-shadow: none;">
                        <span asp-validation-for="min" class="text-danger"></span>
                    </div>
                }
                else{
                    <div class="col-12">
                        <label asp-for="task" class="form-label">Task</label>
                        <input asp-for="task" type="number" class="form-control input-box-style" style="box-shadow: none;">
                        <span asp-validation-for="task" class="text-danger"></span>
                    </div>
                }
                
                
                <div style="align-items: end;">
                    <div style="text-align: center; margin-top: 40px;">
                        <a asp-controller="MyProfile" asp-action="TimeSheet" style="text-decoration: none;" class="btn-style1 btn-style-grey">
                            Cancel
                        </a>
                        <button type="submit" class="btn-style1 btn-style-orange" style="margin-left: 10px;">
                            @(Model.Timesheetid == 0 ? "Create" : "Save")
                        </button>
                    </div>
                </div>
            </form>
        </div>



        <hr style="height:1px;border-width:0;color:gray;background-color:gray">
        <footer>
            <a href="#" class="privacy-policy common-font">Privacy Policy</a>
        </footer>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous">
    </script>
    @section Scripts{
        <partial name="_ValidationScriptsPartial" />
    }
    </body>

    </html>