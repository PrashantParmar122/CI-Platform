    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function validateInput() {
            if (document.getElementById("uploadImage").value == "")
            {
                Swal.fire({
                    icon: 'info',
                    title: 'Upload Image',
                    text: 'Atleast 1 Image should be uploaded while Adding new Story.....',
                })
                return false;
            }
            return true;
        };
