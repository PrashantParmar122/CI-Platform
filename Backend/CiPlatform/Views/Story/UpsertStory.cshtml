<body>
    <div class="body-1">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script data-main="dist/js/" src="js/require.min.js"></script>
        @await Component.InvokeAsync("Navigation")
        <hr>

        <div class="main-body" style="display: block;">
            <div class="common-font Share-your-story font-style-1 "> Share your story</div>
            <form method="post" enctype="multipart/form-data" class="row g-3 common-font font-style-1" style="margin-bottom: 50px;">
                <div class="col-md-4">
                    <label asp-for="MissionId" class="form-label">Select Mission</label>
                    <select asp-for="MissionId" asp-items="@Model.MissionList" id="mission" class="form-select input-box-style" style="box-shadow: none;">
                    </select>
                    <span asp-validation-for="MissionId" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Title" class="form-label">My Story Title</label>
                    <input type="text" asp-for="Title" class="form-control input-box-style" style="box-shadow: none;"
                        placeholder="Enter story title">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="date" class="form-label">Date</label>
                    <input type="date" asp-for="date" class="form-control input-box-style" style="box-shadow: none;">
                    <span asp-validation-for="date" class="text-danger"></span>
                </div>
                <div class="col-12 ">
                    <label asp-for="Description" class="form-label">My Story</label>
                    <textarea asp-for="Description" class="form-control input-box-style" placeholder="Share your story..."
                        style="height: 200px; box-shadow: none;"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="col-12">
                    <label asp-for="VideoURL" class="form-label">Enter Video URL</label>
                    <input type="text" asp-for="VideoURL" class="form-control input-box-style" id="link" style="box-shadow: none;"
                        placeholder="Enter your url">
                    <span asp-validation-for="VideoURL" class="text-danger"></span>
                </div>
                <div class="col-12">
                    <label class="form-label">Upload your Photos</label>
                    <input type="file" name="images" id="uploadImage" multiple class="form-control input-box-style"
                        accept="image/png, image/jpg, image/gif, image/jpeg"/>
                </div> 
