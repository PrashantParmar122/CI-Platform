@using CiPlatform.Models
@model LostPasswordVM

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CL-Lost</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <link href="~/css/Style.css" rel="stylesheet">
</head>

<body>
    <div class="body-1">
        <div class="Left-Container">
            @{
                var i = 0;
            }
            <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="false">
                <div class="carousel-indicators">
                    @foreach (var item in @Model.banner)
                    {
                        var tempclass = "";
                        @if (i == 0)
                        {
                            tempclass = "active";
                        }

                        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="@i"
                            class="@tempclass" aria-label="Slide @i"
                            style="height: 8px;width: 8px; border-radius: 10px;border: 0;">
                        </button>
                        i++;
                    }
                </div>
                <div class="carousel-inner">
                    @{
                        i = 0;
                    }
                    @foreach (var item in @Model.banner)
                    {
                        var tempclass = "carousel-item";

                        @if (i == 0)
                        {
                            tempclass = "carousel-item active";
                            i++;
                        }
                        <div class="@tempclass">
                            <img src="@item.Image"
                             class="d-block w-100 img-height" alt="Can't Load Image">
                            <div class="carousel-caption d-none d-md-block">
                                <p class="photo-head"> @item.Title </p>
                                <p class="photo-body"> @item.Text </p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="Right-Container">
            <div class="form-block">
                <div class="text" style="font-size: 22px;margin-bottom: 10px;">Forget Password</div>
                <div class="text" style="margin-bottom: 36px;">
                    Enter your email address you've using for your account below
                    and we will send you a password reset link
                </div>
                <form class="form-container" method="post">      
                    
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email Address</label>
                        <input asp-for="Email" type="email" class="form-control" style="display:inline;box-shadow: none;" id="Email"
                               placeholder="Enter your email address...">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn form-control btn-outline-warning mb-4 mt-3 rounded-pill"
                            style="border: solid 2px #f88634;color:#f88634;border-radius: 50px;font-size: 17px;">
                        Reset my Password
                    </button>
                </form>
                <div class="text"><a class="text" asp-controller="User" asp-action="Login" >Login</a></div>
            </div>

            <div class="Privacy-Policy">
                <a class="text" asp-controller="Home" asp-action="Privacy"> Privacy Policy </a>
            </div>
        </div>
    </div>
    @section Scripts{
        <partial name="_ValidationScriptsPartial" />
    }
</body>

</html>